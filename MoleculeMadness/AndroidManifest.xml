<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.madness.mm"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.madness.mm.MainMenu"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.madness.mm.NewGameActivity"
            android:label="@string/title_activity_new_game" >
        </activity>
        <activity
            android:name="com.madness.mm.HintActivity"
            android:label="@string/title_activity_hint" >
        </activity>

        <activity android:name="com.madness.mm.Instructions"
            android:label="Instructions"/>

        <activity
            android:name="com.madness.mm.ReviewActivity"
            android:label="@string/title_activity_review"
            android:parentActivityName="com.madness.mm.MainMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.madness.mm.MainMenu" />
        </activity>
        <activity
            android:name="com.madness.mm.TestActivity"
            android:label="@string/title_activity_test" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.madness.mm.BuilderActivity"
            android:label="@string/title_activity_builder" >
        </activity>
        
    </application>

</manifest>